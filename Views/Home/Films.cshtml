@using ProjectThijsChris.Database
@model List<Film>
@{ ViewData["Title"] = "Films"; }

<div class="films">
    @foreach (Film f in Model)
    {
<div class="binnenkort">
    <div class="filmboxje">
        <div class="info">
            <h2>@f.Naam</h2>
            <p> <u>Genre:</u> @f.Genre</p>
            <p> <u>Rating:</u> @f.Rating</p>
            <p> <u>Tijd:</u> @f.Tijd</p>
            <p> <u>Prijs:</u> @f.Prijs</p>
            <p class="beschrijving">@f.Beschrijving</p>
        </div>
    </div>
</div>
                <br />}
</div>