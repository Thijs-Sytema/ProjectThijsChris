@{
    ViewData["Title"] = "Contact";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div>Voornaam: <input type="text" name="firstname" /></div>
    @Html.ValidationMessageFor(m => m.FirstName)
    <div>Achternaam: <input type="text" name="lastname" /></div>
    @Html.ValidationMessageFor(m => m.LastName)
    <div>E-mail: <input type="text" name="email" /></div>
    @Html.ValidationMessageFor(m => m.Email)
    <div>Telefoonnummer: <input type="text" name="telefoonnummer" /></div>
    <div>Adres: <input type="text" name="adres" /></div>
    <div>Beschrijving: <input type="text" name="beschrijving" /></div>
    <input type="submit" value="verstuur" />
</form>

@if (Model != null){
<p>Hallo @Model.FirstName die achternaam @Model.LastName heeft</p>
}