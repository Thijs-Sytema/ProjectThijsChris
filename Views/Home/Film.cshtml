@model ProjectThijsChris.Database.Film
@{ ViewData["Title"] = "Films"; }


<div class="filmbox">
    <div class="filmcontainer">
        <div class="header">
            <h2>@Model.Naam</h2>
        </div>
        <div class="filminfo">
            <p> <u>Genre:</u> @Model.Genre</p>
            <p class="beschrijving">@Model.Beschrijving</p>
            <div class="kaartjes">
                <a href="#">Buy tickets</a>
            </div>
        </div>
    </div>
</div>
