@using ProjectThijsChris.Controllers.Database
@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Alle namen!</h1>
    @foreach (Product p in Model)
    {
        <p>@p.Naam - @p.Prijs - @p.Beschikbaarheid.</p>
        <a href="/film/@p.Id">lees meer</a>
    }
</div>



